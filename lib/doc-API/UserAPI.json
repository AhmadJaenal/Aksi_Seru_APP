        "/api/users/register" : {
            "post" : {
                "tags": ["Succeed"],
                "description": "Register new user",
                "requestBody" : {
                    "content": {
                        "application/json" : {
                            "examples": {
                                "Antonio" : {
                                    "description": "Register user Antonio",
                                    "value" : {
                                        "username" : "Antonio",
                                        "email" : "daniel.antonioramirez@example.com",
                                        "password" : "secret",
                                        "name" : "Daniel Antonio Ramirez"
                                        
                                    }
                                }
                            },
                            "schema" : {
                                "type": "object",
                                "required": [
                                    "name","password","username","email"
                                ],
                                "properties": {
                                    "username" : {
                                        "type": "string"
                                    },
                                    "email" : {
                                        "type": "string"
                                    },
                                    "password" : {
                                        "type": "string"
                                    },
                                    "name" : {
                                        "type": "string"
                                    }
                                    
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400" : {
                        "description": "Validation error",
                        "content": {
                            "application/json" : {
                                "examples": {
                                    "validationerror" : {
                                        "description": "Validation error",
                                        "value" : {
                                            "erros" : {
                                                "username" : [
                                                    "The username field is required",
