                                                ],
                                                "email" : [
                                                    "The username field is required",
                                                    "email already registered"
                                                ],
                                                "password" : [
                                                    "The username field is required"
                                                ],
                                                "name" : [
                                                    "The username field is required"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201" : {
                        "description": "Succes register user",
                        "content": {
                            "application/json" : {
                                "examples": {
                                    "success" : {
                                        "description": "Success register user",
                                        "value" : {
                                            "data" : {
                                                "id" : 1,
                                                "name" : "Daniel Antonio Ramirez",
                                                "username" : "Antonio",
                                                "email" : "daniel.antonioramirez@example.com"
                                            }
                                        }
                                    }
                                },
                                "schema" : {
                                    "type": "object",
                                    "properties": {
                                        "data" : {
                                            "type": "object",
                                            "properties": {
                                                "id" : {
                                                    "type": "number"
                                                },
                                                "username" : {
                                                    "type": "string"
                                                },
                                                "name" : {
